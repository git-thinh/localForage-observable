{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es2015",
    "declaration": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist"
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "typings/**/*.d.ts"
  ]
}
