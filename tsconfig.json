{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es2015",
    "declaration": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@resin.io"
    ]
  },
  "include": [
    "lib/**/*.ts",
    "typings/**/*.d.ts"
  ]
}
