{
  "name": "localforage-observable",
  "version": "1.4.0",
  "description": "Adds observable method to localForage.",
  "homepage": "https://github.com/thgreasi/localForage-observable",
  "main": "dist/localforage-observable.js",
  "jsnext:main": "dist/localforage-observable.es6.js",
  "typings": "typings/localforage-observable.d.ts",
  "scripts": {
    "lint": "tslint -t stylish -c tslint.json '{lib,test}/**/*.ts'",
    "lint-fix": "tslint --fix -t stylish -c tslint.json '{lib,test}/**/*.ts'",
    "prebuild": "npm run prettify && npm run lint-fix",
    "precommit": "lint-staged",
    "prettify": "prettier --write \"lib/**/*.ts\" \"test/**/*.ts\"",
    "build:umd": "rollup -c rollup.config.umd.js",
    "build:es6": "rollup -c rollup.config.es6.js",
    "build": "npm run build:umd && npm run build:es6",
    "pretest": "rollup -c rollup.config.test.js",
    "test:mocha": "mocha build/test-bundle.js",
    "test:typings": "node_modules/.bin/tsc --project typing-tests",
    "test:all": "npm run test:mocha && npm run test:typings",
    "test": "npm run build && npm run test:all",
    "prepublish": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thgreasi/localForage-observable.git"
  },
  "keywords": [
    "localforage",
    "observable"
  ],
  "author": "Thodoris Greasidis",
  "licence": "Apache-2.0",
  "bugs": {
    "url": "http://github.com/thgreasi/localForage-observable/issues"
  },
  "devDependencies": {
    "@reactivex/rxjs": "^5.0.0-beta.7",
    "eslint": "^2.8.0",
    "lint-staged": "^7.0.0",
    "mocha": "^3.5.0",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-typescript2": "^0.12.0",
    "source-map-support": "^0.4.15",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "localforage": "^1.5.0",
    "zen-observable": "^0.2.1"
  },
  "lint-staged": {
    "{lib,test}/**/*.ts": [
      "prettier --write",
      "tslint -t stylish --fix"
    ]
  }
}
